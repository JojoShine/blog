# 数据库配置
DATABASE_URL=postgres://username:password@localhost:5432/blog
# 或者分开配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blog
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# MinIO 配置（如果使用MinIO）
MINIO_ENDPOINT=your_minio_endpoint
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=blog-images
MINIO_PUBLIC_URL=http://your_minio_endpoint:9000

# 阿里云OSS配置（如果使用阿里云OSS）
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your_oss_bucket_name

# Next.js 配置
NEXT_PUBLIC_API_URL=http://localhost:3000

# 网站域名配置（生产环境必须配置）
# 用于分享功能生成正确的文章链接
# 开发环境: http://localhost:3000
# 生产环境: https://tbtparent.me
NEXT_PUBLIC_SITE_URL=https://tbtparent.me

# 应用配置
NODE_ENV=development

# 管理员认证配置
NEXT_PUBLIC_ADMIN_USERNAME=admin
NEXT_PUBLIC_ADMIN_PASSWORD=your_secure_password

# 注意：
# 1. 请务必修改所有默认密码和密钥
# 2. 生产环境请使用强密码
# 3. 不要将真实的 .env 文件提交到版本控制系统